# ========================================================
# 🛠 Buddha-39797 - Universal EditorConfig (Tiếng Anh + Tiếng Việt)
# Dành cho VSCode, Atom, Sublime, JetBrains, Notepad++,...
# ========================================================

root = true

[*]
# 🌐 Unicode toàn tập cho mọi ngôn ngữ
charset = utf-8

# ⚖ Sử dụng 2 khoảng trắng (space) để indent
indent_style = space
indent_size = 2

# 🧼 Dọn dẹp code: xoá khoảng trắng dư, dòng cuối cùng
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# -----------------------------------------------
# 💬 Markdown: không xoá dấu cách để giữ format
[*.md]
trim_trailing_whitespace = false

# 🐍 Python: PEP8 yêu cầu 4 space
[*.py]
indent_size = 4

# 🧩 C/C++ nên dùng 4 space cho dễ nhìn
[*.c]
indent_size = 4

[*.cpp]
indent_size = 4

[*.h]
indent_size = 4

# 🌐 Web: HTML/CSS/JS
[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.jsx]
indent_size = 2

[*.tsx]
indent_size = 2

# ⚙️ JSON: dùng 2 space mặc định
[*.json]
indent_size = 2

# 📄 YAML cực kỳ nhạy cảm với tab, nên dùng 2 space
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# 🛡️ Shell script
[*.sh]
indent_size = 2

# 🐘 PHP
[*.php]
indent_size = 4

# 🖥 Batch script Windows: dùng CRLF (chuẩn của Windows)
[*.bat]
end_of_line = crlf

# 🛠️ Makefile yêu cầu TAB, không dùng space
[Makefile]
indent_style = tab

# 🧪 Test files (không giới hạn ngôn ngữ)
[*test*]
insert_final_newline = true
trim_trailing_whitespace = true

# 🧙 Easter Egg: nếu ai đó mở file này bằng Notepad
# sẽ thấy định dạng chỉnh chu,gọn gàng và sạch sẽ!
